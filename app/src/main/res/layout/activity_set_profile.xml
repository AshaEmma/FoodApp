<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matcha_drink_trans"
    tools:context=".CreateProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        app:popupTheme="@style/toolbar_style" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Change to edit text view -->


        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/New_Usr_Welcome"
                android:layout_width="400sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/amaranth_bold"
                android:text="@string/User_Welcome"
                android:textAlignment="center"
                android:textColor="@color/shadeDeepGreyBlue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_gravity="top"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:autofillHints="username"
                android:background="@drawable/textfield_shape"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:hint="@string/first_name"
                android:inputType="text"
                android:paddingStart="5sp"
                android:paddingTop="3sp"
                android:paddingEnd="5sp"
                android:textColor="@color/shadeDeepGreyBlue"
                android:textSize="20sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="10sp"
                android:autofillHints="username"
                android:background="@drawable/textfield_shape"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:hint="@string/last_name"
                android:inputType="text"
                android:paddingStart="5sp"
                android:paddingTop="3sp"
                android:paddingEnd="5sp"
                android:textColor="@color/shadeDeepGreyBlue"
                android:textSize="20sp"
                tools:ignore="LabelFor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtDOB"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:autofillHints="Date of Birth"
                android:background="@drawable/textfield_shape"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:hint="@string/birth_date"
                android:inputType="date"
                android:paddingStart="5sp"
                android:paddingTop="3sp"
                android:paddingEnd="5sp"
                android:textColor="@color/shadeDeepGreyBlue"
                android:textSize="20sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:autofillHints="Fill in email"
                android:background="@drawable/textfield_shape"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:paddingStart="5sp"
                android:paddingTop="3sp"
                android:paddingEnd="5sp"
                android:textColor="@color/shadeDeepGreyBlue"
                android:textSize="20sp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/btnEditProfileSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40sp"
                android:background="@drawable/btn_shape2"
                android:backgroundTint="@null"
                android:fontFamily="@font/amaranth"
                android:text="@string/confirm_changes"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>