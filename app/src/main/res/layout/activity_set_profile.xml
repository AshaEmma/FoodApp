<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/matcha_drink"
    tools:context=".CreateProfileActivity">

    <include
        layout="@layout/custom_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="22dp">

        <!-- Change to edit text view -->


            <LinearLayout
                android:id="@+id/layout_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/New_Usr_Welcome"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:text="@string/User_Welcome"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30sp"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/FirstName"
                        android:layout_width="150sp"
                        android:layout_height="50sp"
                        android:layout_gravity="top"

                        android:layout_marginBottom="10sp"
                        android:autofillHints="username"
                        android:background="@drawable/textfield_shape"
                        android:fontFamily="@font/amaranth"
                        android:gravity="top"
                        android:hint="@string/first_name"
                        android:inputType="text"
                        android:paddingStart="5sp"
                        android:paddingTop="3sp"
                        android:paddingEnd="5sp"
                        android:layout_marginEnd="10sp"
                        android:textColor="@color/greyBlueCool"
                        android:textSize="12sp"
                        tools:ignore="LabelFor" />

                    <EditText
                        android:id="@+id/LastName"
                        android:layout_width="150sp"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:autofillHints="username"
                        android:background="@drawable/textfield_shape"
                        android:fontFamily="@font/amaranth"
                        android:gravity="top"
                        android:hint="@string/last_name"
                        android:layout_marginStart="10sp"
                        android:inputType="text"
                        android:paddingStart="5sp"
                        android:paddingTop="3sp"
                        android:paddingEnd="5sp"
                        android:textColor="@color/greyBlueCool"
                        android:textSize="12sp"
                        tools:ignore="LabelFor" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                <EditText
                    android:id="@+id/txtDOB"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:autofillHints="Date of Birth"
                    android:background="@drawable/textfield_shape"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="top"
                    android:hint="@string/birth_date"
                    android:inputType="date"
                    android:paddingStart="5sp"
                    android:paddingTop="3sp"
                    android:paddingEnd="5sp"
                    android:textColor="@color/greyBlueCool"
                    android:textSize="12sp"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:autofillHints="Fill in email"
                    android:background="@drawable/textfield_shape"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="top"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:paddingStart="5sp"
                    android:paddingTop="3sp"
                    android:paddingEnd="5sp"
                    android:textColor="@color/greyBlueCool"
                    android:textSize="12sp"
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/btnEditProfileSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/btn_shape3"
                    android:fontFamily="@font/vollkorn_semibold"
                    android:text="@string/confirm_changes"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>